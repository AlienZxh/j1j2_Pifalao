<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLayoutBg"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/backBtn"
                fontPath="iconfont/iconfont.ttf"
                android:layout_width="@dimen/actionbar_height"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/icon_back"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/icon_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="关于我们"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_actionbar_title" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_noraml"
            android:text="　　批发佬（www.pifalao.com）定位于一个专为会员用户服务的一站式网购批发超市。我们致力于创新建设一条直接面向家庭用户的完全透明、高效率、零商品附加利润的O2O供应链通道，并把关商品质量和优质实体店售后，全面打通“供应商（厂家）→（分布式）仓储配送中心→（社区化）服务点→（家庭）用户”这四个最优主体之间流通的所有环节，最终实现基于移动互联网入口的C to B全业务、低成本、高时效的综合性服务平台。"
            android:textColor="@color/colorText333"
            android:textSize="@dimen/text_big" />
    </com.zhy.autolayout.AutoLinearLayout>
</layout>