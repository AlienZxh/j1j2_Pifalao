<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.net.Uri" />

        <import type="android.view.View.OnClickListener" />

        <variable
            name="onClick"
            type="OnClickListener" />

        <variable
            name="productSimple"
            type="com.j1j2.data.model.ProductSimple" />
    </data>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        app:OnClickListener="@{onClick}">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            app:imageURI="@{Uri.parse(productSimple.MainImg??@string/text_empty)}"
            fresco:roundedCornerRadius="5dp"
            fresco:roundingBorderColor="@color/colorGrayCCCCCC"
            fresco:roundingBorderWidth="1px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:layout_marginBottom="20px"
            android:layout_marginTop="20px"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@{productSimple.Name}"
                android:textColor="@color/colorText333"
                android:textSize="@dimen/text_big" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@{productSimple.ProductUnits.size()>0?String.valueOf(productSimple.ProductUnits.get(0).MemberPrice):@string/text_null}"
                android:textColor="@color/colorText333"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@{productSimple.ProductUnits.size()>0?String.valueOf(productSimple.ProductUnits.get(0).RetialPrice):@string/text_null}"
                android:textColor="@color/colorText333"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10px"
                android:layout_weight="1"
                android:gravity="center_vertical" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
</layout>