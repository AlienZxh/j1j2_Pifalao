<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="module"
            type="com.j1j2.data.model.Module" />

        <variable
            name="onClick"
            type="android.view.View.OnClickListener" />
    </data>

    <com.j1j2.common.view.autowidget.AutoCardView
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:orientation="vertical"
        app:OnClickListener="@{onClick}"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/icon"
                fontPath="iconfont/iconfont.ttf"
                android:layout_width="160px"
                android:layout_height="160px"
                android:gravity="center"
                android:text="@string/icon_service_delivery"
                android:textColor="@color/colorAccent"
                android:textSize="120px"
                app:layout_auto_basewidth="height" />

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/padding_noraml"
                android:layout_marginTop="@dimen/padding_noraml"
                android:background="@color/colorDividerE9E9E9" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/padding_noraml"
                android:layout_marginLeft="@dimen/padding_small"
                android:layout_marginTop="@dimen/padding_noraml"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{module.ModuleName}"
                        android:textColor="@color/colorText333"
                        android:textSize="@dimen/text_biger"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tag"
                        fontPath="iconfont/iconfont.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_small"
                        android:textSize="@dimen/text_big"
                        android:visibility="@{module.Subscribed?View.VISIBLE:View.GONE}" />
                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16px"
                    android:text="@{module.ModuleServiceScope}"
                    android:textColor="@color/colorTextaaa"
                    android:textSize="@dimen/text_normal" />

            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                fontPath="iconfont/iconfont.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_noraml"
                android:text="@string/icon_arrow_right"
                android:textColor="@color/colorTextaaa"
                android:textSize="@dimen/text_big" />

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:layout_gravity="bottom"
            android:background="@drawable/item_morehome_disable_bg"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/padding_noraml"
            android:text="即将开通"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_normal"
            android:visibility="@{module.Subscribed?View.GONE:View.VISIBLE}" />

    </com.j1j2.common.view.autowidget.AutoCardView>

</layout>