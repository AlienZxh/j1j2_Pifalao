<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.j1j2.data.model.SaleOrderStateHistory" />

        <import type="com.j1j2.common.util.StringUtils" />

        <variable
            name="saleOrderStateHistory"
            type="SaleOrderStateHistory" />

        <variable
            name="isLast"
            type="boolean" />
    </data>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="44px"
        android:paddingTop="44px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="120px"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:background="@{isLast?@drawable/register_step_selected_bg:@drawable/register_step_normal_bg}"
                    android:gravity="center"
                    app:layout_auto_baseheight="width" />

            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44px"
                android:gravity="center_vertical"
                android:text="@{StringUtils.getOrdersState(saleOrderStateHistory.SaleOrderState)}"
                android:textColor="@{isLast?@color/colorAccent:@color/colorText333}"
                android:textSize="@dimen/text_biger" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44px"
                android:layout_marginLeft="@dimen/padding_noraml"
                android:gravity="center_vertical"
                android:text="@{saleOrderStateHistory.ExcutedTimeStr==null?&quot;&quot;:(&quot;（&quot;+saleOrderStateHistory.ExcutedTimeStr+&quot;）&quot;)}"
                android:textColor="@{isLast?@color/colorAccent:@color/colorTextaaa}"
                android:textSize="@dimen/text_big" />

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="120px"
            android:text="@{StringUtils.getOrdersTimeLineContent(saleOrderStateHistory.SaleOrderState)}"
            android:textColor="@{isLast?@color/colorAccent:@color/colorTextaaa}"
            android:textSize="@dimen/text_normal" />

    </com.zhy.autolayout.AutoLinearLayout>
</layout>