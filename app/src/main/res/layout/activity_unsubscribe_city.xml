<?xml version="1.0" encoding="utf-8"?>
<layout>

    <com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/backBtn"
                fontPath="iconfont/iconfont.ttf"
                android:layout_width="@dimen/actionbar_height"
                android:layout_height="match_parent"
                android:background="@drawable/actionbar_btn_bg"
                android:gravity="center"
                android:text="@string/icon_back"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/icon_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="暂未开通"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_actionbar_title" />
        </com.zhy.autolayout.AutoRelativeLayout>


        <ImageView
            android:layout_width="483px"
            android:layout_height="539px"
            android:layout_marginTop="150px"
            android:scaleType="fitCenter"
            android:src="@drawable/unsubscribe_city" />


        <ImageView
            android:layout_width="334px"
            android:layout_height="114px"
            android:layout_marginTop="50px"
            android:scaleType="fitCenter"
            android:src="@drawable/unsubscribe_city_bottom" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30px"
            android:text="加盟电话：400-808-7174"
            android:textColor="@color/colorText999"
            android:textSize="@dimen/text_big" />


    </com.zhy.autolayout.AutoLinearLayout>
</layout>