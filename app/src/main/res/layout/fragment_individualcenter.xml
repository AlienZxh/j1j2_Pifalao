<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.j1j2.common.util.StringUtils" />

        <import type="com.j1j2.pifalao.BuildConfig" />

        <import type="android.net.Uri" />

        <import type="android.view.View" />

        <variable
            name="unReadInfoManager"
            type="com.j1j2.pifalao.app.UnReadInfoManager" />

        <variable
            name="individualCenterViewModel"
            type="com.j1j2.pifalao.feature.individualcenter.IndividualCenterViewModel" />

    </data>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLayoutBg"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/backBtn"
                fontPath="iconfont/iconfont.ttf"
                android:layout_width="@dimen/actionbar_height"
                android:layout_height="match_parent"
                android:background="@drawable/actionbar_btn_bg"
                android:gravity="center"
                android:text="@string/icon_back"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/icon_normal"
                app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/individualcenter_actionbar_title"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_actionbar_title" />


            <TextView
                android:id="@+id/setting"
                fontPath="iconfont/iconfont.ttf"
                android:layout_width="@dimen/actionbar_height"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/actionbar_btn_bg"
                android:gravity="center"
                android:text="@string/icon_setting"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/icon_normal"
                app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorLayoutBg"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="234px"
                    android:background="@drawable/individualcenter_head_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/userImg"
                        android:layout_width="154px"
                        android:layout_height="154px"
                        android:layout_marginLeft="@dimen/padding_noraml"
                        android:layout_marginRight="@dimen/padding_biger"
                        android:background="@drawable/img_circle_bg"
                        android:padding="@dimen/height_1px"
                        app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}"
                        app:displayImgUserHead="@{Uri.parse((BuildConfig.IMAGE_URL+individualCenterViewModel.userObservableField.Portrait))}"
                        app:layout_auto_basewidth="height" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="154px"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18px"
                            android:text="@{individualCenterViewModel.userObservableField.LoginAccount}"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_biger" />

                        <ImageView
                            android:layout_width="120px"
                            android:layout_height="40px"
                            android:layout_marginBottom="18px"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_member_normal" />

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{StringUtils.getPointStr(individualCenterViewModel.userObservableField.Point)}"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_normal" />

                            <TextView
                                android:id="@+id/updateVIP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="100px"
                                android:padding="5px"
                                android:text="立即兑换>"
                                android:textColor="#ffe933"
                                android:textSize="@dimen/text_normal"
                                app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}" />
                        </com.zhy.autolayout.AutoLinearLayout>
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="114px"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/coustomBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_small"
                            android:layout_marginTop="@dimen/padding_noraml"
                            android:text="@{&quot;￥&quot;+String.valueOf(individualCenterViewModel.userObservableField.Cost)}"
                            android:textColor="@color/colorTextaaa"
                            android:textSize="30px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="累计消费"
                            android:textColor="@color/colorTextaaa"
                            android:textSize="@dimen/text_normal" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="@dimen/padding_big"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorGrayEDEDED"
                        app:layout_auto_baseheight="width" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/saveBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_small"
                            android:layout_marginTop="@dimen/padding_noraml"
                            android:text="@{&quot;￥&quot;+String.valueOf(individualCenterViewModel.userObservableField.UserSaveAmount)}"
                            android:textColor="@color/colorPrimary"
                            android:textSize="30px"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="累计节省"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_normal" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="@dimen/padding_big"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorGrayEDEDED"
                        app:layout_auto_baseheight="width" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/briberymonery"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_small"
                            android:layout_marginTop="@dimen/padding_noraml"
                            android:text="@{String.valueOf(unReadInfoManager.foldRedPacketCount)}"
                            android:textColor="@color/colorRed"
                            android:textSize="30px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="红包"
                            android:textColor="@color/colorTextaaa"
                            android:textSize="@dimen/text_normal" />
                    </com.zhy.autolayout.AutoLinearLayout>

                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_productdetail"
                    android:background="@drawable/item_products_divider" />


                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/allOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_noraml"
                    app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="我的订单"
                        android:textColor="@color/colorTextaaa"
                        android:textSize="@dimen/text_big" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看全部订单"
                        android:textColor="@color/colorTextaaa"
                        android:textSize="@dimen/text_normal" />

                    <TextView
                        fontPath="iconfont/iconfont.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_arrow_right"
                        android:textColor="@color/colorTextaaa"
                        android:textSize="@dimen/text_big" />

                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_1px"
                    android:background="@color/colorGrayE8E8E8" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <com.j1j2.common.view.bgabadgewidget.AutoBGABadgeLinearLayout
                        android:id="@+id/UnPayOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}"
                        app:badge_bgColor="@color/colorRed"
                        app:badge_borderWidth="1dp"
                        app:badge_gravity="rightTop"
                        app:badge_horizontalMargin="17dp"
                        app:badge_textSize="10sp"
                        app:showNum="@{individualCenterViewModel.statisticsObservableField.UnPayOrderCount}">

                        <TextView
                            fontPath="iconfont/iconfont.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_small"
                            android:layout_marginTop="@dimen/padding_noraml"
                            android:text="@string/icon_order_unpay_new"
                            android:textColor="@color/colorText666"
                            android:textSize="@dimen/icon_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_noraml"
                            android:text="待付款"
                            android:textColor="@color/colorText666"
                            android:textSize="@dimen/text_normal" />

                    </com.j1j2.common.view.bgabadgewidget.AutoBGABadgeLinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/padding_noraml"
                        android:layout_marginTop="@dimen/padding_noraml"
                        android:background="@color/colorGrayEDEDED"
                        app:layout_auto_baseheight="width" />

                    <com.j1j2.common.view.bgabadgewidget.AutoBGABadgeLinearLayout
                        android:id="@+id/SubmitOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}"
                        app:badge_bgColor="@color/colorRed"
                        app:badge_borderWidth="1dp"
                        app:badge_gravity="rightTop"
                        app:badge_horizontalMargin="17dp"
                        app:badge_textSize="10sp"
                        app:showNum="@{individualCenterViewModel.statisticsObservableField.SubmitUnReadCount}">

                        <TextView
                            fontPath="iconfont/iconfont.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_small"
                            android:layout_marginTop="@dimen/padding_noraml"
                            android:text="@string/icon_order_submit_new"
                            android:textColor="@color/colorText666"
                            android:textSize="@dimen/icon_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_noraml"
                            android:text="已下单"
                            android:textColor="@color/colorText666"
                            android:textSize="@dimen/text_normal" />

                    </com.j1j2.common.view.bgabadgewidget.AutoBGABadgeLinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/padding_noraml"
                        android:layout_marginTop="@dimen/padding_noraml"
                        android:background="@color/colorGrayEDEDED"
                        app:layout_auto_baseheight="width" />

                    <com.j1j2.common.view.bgabadgewidget.AutoBGABadgeLinearLayout
                        android:id="@+id/ExcutingOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}"
                        app:badge_bgColor="@color/colorRed"
                        app:badge_borderWidth="1dp"
                        app:badge_gravity="rightTop"
                        app:badge_horizontalMargin="17dp"
                        app:badge_textSize="10sp"
                        app:showNum="@{individualCenterViewModel.statisticsObservableField.ExcuteingUnReadCount}">

                        <TextView
                            fontPath="iconfont/iconfont.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_small"
                            android:layout_marginTop="@dimen/padding_noraml"
                            android:text="@string/icon_order_excuting_new"
                            android:textColor="@color/colorText666"
                            android:textSize="@dimen/icon_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_noraml"
                            android:text="处理中"
                            android:textColor="@color/colorText666"
                            android:textSize="@dimen/text_normal" />

                    </com.j1j2.common.view.bgabadgewidget.AutoBGABadgeLinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/padding_noraml"
                        android:layout_marginTop="@dimen/padding_noraml"
                        android:background="@color/colorGrayEDEDED"
                        app:layout_auto_baseheight="width" />

                    <com.j1j2.common.view.bgabadgewidget.AutoBGABadgeLinearLayout
                        android:id="@+id/DeliveryOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}"
                        app:badge_bgColor="@color/colorRed"
                        app:badge_borderWidth="1dp"
                        app:badge_gravity="rightTop"
                        app:badge_horizontalMargin="17dp"
                        app:badge_textSize="10sp"
                        app:showNum="@{individualCenterViewModel.statisticsObservableField.DeliveryUnReadCount}">

                        <TextView
                            fontPath="iconfont/iconfont.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_small"
                            android:layout_marginTop="@dimen/padding_noraml"
                            android:text="@string/icon_order_clientwaitforrecevie_new"
                            android:textColor="@color/colorText666"
                            android:textSize="@dimen/icon_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_noraml"
                            android:text="待收货"
                            android:textColor="@color/colorText666"
                            android:textSize="@dimen/text_normal" />

                    </com.j1j2.common.view.bgabadgewidget.AutoBGABadgeLinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/padding_noraml"
                        android:layout_marginTop="@dimen/padding_noraml"
                        android:background="@color/colorGrayEDEDED"
                        app:layout_auto_baseheight="width" />

                    <com.j1j2.common.view.bgabadgewidget.AutoBGABadgeLinearLayout
                        android:id="@+id/unRateOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}"
                        app:badge_bgColor="@color/colorRed"
                        app:badge_borderWidth="1dp"
                        app:badge_gravity="rightTop"
                        app:badge_horizontalMargin="17dp"
                        app:badge_textSize="10sp"
                        app:showNum="@{individualCenterViewModel.statisticsObservableField.WaitForRateUnReadCount}">

                        <TextView
                            fontPath="iconfont/iconfont.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_small"
                            android:layout_marginTop="@dimen/padding_noraml"
                            android:text="@string/icon_order_waitforrate_new"
                            android:textColor="@color/colorText666"
                            android:textSize="@dimen/icon_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_noraml"
                            android:text="待评价"
                            android:textColor="@color/colorText666"
                            android:textSize="@dimen/text_normal" />

                    </com.j1j2.common.view.bgabadgewidget.AutoBGABadgeLinearLayout>

                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_productdetail"
                    android:background="@drawable/item_products_divider" />

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/qrCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/padding_noraml"
                        android:paddingTop="@dimen/padding_noraml">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48px"
                            android:layout_marginLeft="80px"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="账户余额：　"
                                android:textColor="@color/colorText333"
                                android:textSize="@dimen/text_big" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/text_big"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{&quot;&quot;+individualCenterViewModel.userObservableField.Balance}"
                                android:textColor="@color/colorAccent"
                                android:textSize="40px"
                                android:textStyle="bold" />
                        </com.zhy.autolayout.AutoLinearLayout>

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48px"
                            android:layout_marginLeft="80px"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                fontPath="iconfont/iconfont.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/icon_gift"
                                android:textColor="@color/colorAccent"
                                android:textSize="36px" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="服务点扫描支付，享受更多会员福利！"
                                android:textColor="@color/colorTextaaa"
                                android:textSize="@dimen/text_normal" />
                        </com.zhy.autolayout.AutoLinearLayout>

                    </com.zhy.autolayout.AutoLinearLayout>

                    <TextView
                        android:id="@+id/arrow"
                        fontPath="iconfont/iconfont.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/padding_noraml"
                        android:text="@string/icon_arrow_right"
                        android:textColor="@color/colorTextaaa"
                        android:textSize="@dimen/text_big" />

                    <TextView
                        fontPath="iconfont/iconfont.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/padding_noraml"
                        android:layout_toLeftOf="@id/arrow"
                        android:text="@string/icon_qr_code"
                        android:textColor="@color/colorTextaaa"
                        android:textSize="60px" />

                    <TextView
                        fontPath="iconfont/iconfont.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_privilege"
                        android:textColor="@color/colorAccent"
                        android:textSize="64px"
                        app:layout_auto_baseheight="width" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_productdetail"
                    android:background="@drawable/item_products_divider" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/allParticipationBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/padding_noraml"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_noraml"
                    app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}">

                    <TextView
                        fontPath="iconfont/iconfont.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_small"
                        android:layout_marginRight="@dimen/padding_small"
                        android:text="@string/icon_activitymanager"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/icon_normal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="我的活动"
                        android:textColor="@color/colorText333"
                        android:textSize="@dimen/text_big" />

                    <cn.bingoogolapple.badgeview.BGABadgeTextView
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/padding_noraml"
                        app:badge_bgColor="@color/colorRed"
                        app:badge_gravity="rightCenter"
                        app:badge_textSize="12sp" />

                    <TextView
                        fontPath="iconfont/iconfont.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_noraml"
                        android:text="@string/icon_arrow_right"
                        android:textColor="@color/colorTextaaa"
                        android:textSize="@dimen/text_big" />

                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_productdetail"
                    android:background="@drawable/item_products_divider" />


                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/adderssManager"
                    android:layout_width="match_parent"
