<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.j1j2.common.util.StringUtils" />

        <import type="android.view.View" />

        <variable
            name="unReadInfoManager"
            type="com.j1j2.pifalao.app.UnReadInfoManager" />

        <variable
            name="individualCenterViewModel"
            type="com.j1j2.pifalao.feature.individualcenter.IndividualCenterViewModel" />
    </data>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLayoutBg"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/backBtn"
                fontPath="iconfont/iconfont.ttf"
                android:layout_width="@dimen/actionbar_height"
                android:layout_height="match_parent"
                android:background="@drawable/actionbar_btn_bg"
                android:gravity="center"
                android:text="@string/icon_back"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/icon_normal"
                app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/individualcenter_actionbar_title"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_actionbar_title" />


            <TextView
                android:id="@+id/setting"
                fontPath="iconfont/iconfont.ttf"
                android:layout_width="@dimen/actionbar_height"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/actionbar_btn_bg"
                android:gravity="center"
                android:text="@string/icon_setting"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/icon_normal"
                app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorLayoutBg"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="210px"
                    android:background="@drawable/individualcenter_head_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="28px"
                    android:paddingTop="28px">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/userImg"
                        android:layout_width="154px"
                        android:layout_height="154px"
                        android:layout_marginLeft="@dimen/padding_noraml"
                        android:layout_marginRight="@dimen/padding_noraml"
                        app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}"
                        app:layout_auto_basewidth="height"
                        fresco:placeholderImage="@drawable/user_head_img"
                        fresco:roundedCornerRadius="5dp"
                        fresco:roundingBorderColor="@color/colorGrayDEDEDE"
                        fresco:roundingBorderWidth="1px" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24px"
                            android:text="@{individualCenterViewModel.userObservableField.LoginAccount}"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_biger" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_noraml"
                            android:text="普通会员"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_normal" />

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{StringUtils.getPointStr(individualCenterViewModel.userObservableField.Point)}"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_normal" />

                            <TextView
                                android:id="@+id/updateVIP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/padding_big"
                                android:background="@drawable/orange_conner_tag_bg"
                                android:padding="5px"
                                android:text="立即兑换"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_normal"
                                app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}" />
                        </com.zhy.autolayout.AutoLinearLayout>


                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>


                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="114px"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/coustomBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_small"
                            android:layout_marginTop="@dimen/padding_noraml"
                            android:text="@{&quot;￥&quot;+String.valueOf(individualCenterViewModel.userObservableField.Cost)}"
                            android:textColor="@color/colorTextaaa"
                            android:textSize="30px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="累计消费"
                            android:textColor="@color/colorTextaaa"
                            android:textSize="@dimen/text_normal" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="@dimen/padding_big"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorGrayEDEDED"
                        app:layout_auto_baseheight="width" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/saveBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_small"
                            android:layout_marginTop="@dimen/padding_noraml"
                            android:text="@{&quot;￥&quot;+String.valueOf(individualCenterViewModel.userObservableField.UserSaveAmount)}"
                            android:textColor="@color/colorPrimary"
                            android:textSize="30px"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="累计节省"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_normal" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="@dimen/padding_big"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorGrayEDEDED"
                        app:layout_auto_baseheight="width" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/normalCoupon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_small"
                            android:layout_marginTop="@dimen/padding_noraml"
                            android:text="@{String.valueOf(individualCenterViewModel.couponNum)}"
                            android:textColor="@color/colorTextaaa"
                            android:textSize="30px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="优惠券"
                            android:textColor="@color/colorTextaaa"
                            android:textSize="@dimen/text_normal" />
                    </com.zhy.autolayout.AutoLinearLayout>

                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_productdetail"
                    android:background="@drawable/item_products_divider" />

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/qrCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/padding_noraml"
                        android:paddingTop="@dimen/padding_noraml">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48px"
                            android:layout_marginLeft="80px"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="账户余额：　"
                                android:textColor="@color/colorText333"
                                android:textSize="@dimen/text_big" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/text_big"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{&quot;&quot;+individualCenterViewModel.userObservableField.Balance}"
                                android:textColor="@color/colorAccent"
                                android:textSize="40px"
                                android:textStyle="bold" />
                        </com.zhy.autolayout.AutoLinearLayout>

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48px"
                            android:layout_marginLeft="80px"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                fontPath="iconfont/iconfont.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/icon_gift"
                                android:textColor="@color/colorAccent"
                                android:textSize="36px" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="便利店扫描支付，享受更多会员福利！"
                                android:textColor="@color/colorTextaaa"
                                android:textSize="@dimen/text_normal" />
                        </com.zhy.autolayout.AutoLinearLayout>

                    </com.zhy.autolayout.AutoLinearLayout>

                    <TextView
                        android:id="@+id/arrow"
                        fontPath="iconfont/iconfont.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/padding_noraml"
                        android:text="@string/icon_arrow_right"
                        android:textColor="@color/colorTextaaa"
                        android:textSize="@dimen/text_big" />

                    <TextView
                        fontPath="iconfont/iconfont.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/padding_noraml"
                        android:layout_toLeftOf="@id/arrow"
                        android:text="@string/icon_qr_code"
                        android:textColor="@color/colorTextaaa"
                        android:textSize="60px" />

                    <TextView
                        fontPath="iconfont/iconfont.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_privilege"
                        android:textColor="@color/colorAccent"
                        android:textSize="64px"
                        app:layout_auto_baseheight="width" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_productdetail"
                    android:background="@drawable/item_products_divider" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/orderManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/padding_noraml"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_noraml"
                    app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}">

                    <TextView
                        fontPath="iconfont/iconfont.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_small"
                        android:layout_marginRight="@dimen/padding_small"
                        android:text="@string/icon_ordermanager"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/icon_normal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="订单管理"
                        android:textColor="@color/colorText333"
                        android:textSize="@dimen/text_big" />

                    <cn.bingoogolapple.badgeview.BGABadgeTextView
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/padding_noraml"
                        app:badge_bgColor="@color/colorRed"
                        app:badge_gravity="rightCenter"
                        app:badge_textSize="12sp"
                        app:showNum="@{unReadInfoManager.unReadInfo.UnReadOrderCount}" />

                    <TextView
                        fontPath="iconfont/iconfont.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_noraml"
                        android:text="@string/icon_arrow_right"
                        android:textColor="@color/colorTextaaa"
                        android:textSize="@dimen/text_big" />

                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_productdetail"
                    android:background="@drawable/item_products_divider" />


                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/adderssManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/padding_noraml"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_noraml"
                    app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}">

                    <TextView
                        fontPath="iconfont/iconfont.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_small"
                        android:layout_marginRight="@dimen/padding_small"
                        android:text="@string/icon_addressmanager"
                        android:textColor="#ff007aff"
                        android:textSize="@dimen/icon_normal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="地址管理"
                        android:textColor="@color/colorText333"
                        android:textSize="@dimen/text_big" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/padding_noraml" />

                    <TextView
                        fontPath="iconfont/iconfont.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_noraml"
                        android:text="@string/icon_arrow_right"
                        android:textColor="@color/colorTextaaa"
                        android:textSize="@dimen/text_big" />

                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_1px"
                    android:background="@color/colorGrayF0F0F0" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/walletManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/padding_noraml"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_noraml"
                    app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}">

                    <TextView
                        fontPath="iconfont/iconfont.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_small"
                        android:layout_marginRight="@dimen/padding_small"
                        android:text="@string/icon_walletmanager"
                        android:textColor="#ffff3045"
                        android:textSize="@dimen/icon_normal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="我的钱包"
                        android:textColor="@color/colorText333"
                        android:textSize="@dimen/text_big" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/padding_noraml"
                        android:text="券、余额、积分等"
                        android:textColor="@color/colorTextaaa"
                        android:textSize="@dimen/text_normal" />

                    <TextView
                        fontPath="iconfont/iconfont.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_noraml"
                        android:text="@string/icon_arrow_right"
                        android:textColor="@color/colorTextaaa"
                        android:textSize="@dimen/text_big" />

                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_1px"
                    android:background="@color/colorGrayF0F0F0" />


                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/massageManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/padding_noraml"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_noraml"
                    app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}">

                    <TextView
                        fontPath="iconfont/iconfont.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_small"
                        android:layout_marginRight="@dimen/padding_small"
                        android:text="@string/icon_messagemanager"
                        android:textColor="#ff34aadc"
                        android:textSize="@dimen/icon_normal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="我的消息"
                        android:textColor="@color/colorText333"
                        android:textSize="@dimen/text_big" />

                    <cn.bingoogolapple.badgeview.BGABadgeTextView
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/padding_noraml"
                        app:badge_bgColor="@color/colorRed"
                        app:badge_gravity="rightCenter"
                        app:badge_textSize="12sp"
                        app:showNum="@{unReadInfoManager.unReadInfo.UnReadPushMessageCount}" />

                    <TextView
                        fontPath="iconfont/iconfont.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_noraml"
                        android:text="@string/icon_arrow_right"
                        android:textColor="@color/colorTextaaa"
                        android:textSize="@dimen/text_big" />

                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_productdetail"
                    android:background="@drawable/item_products_divider" />


                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/collectManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/padding_noraml"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_noraml"
                    app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}">

                    <TextView
                        fontPath="iconfont/iconfont.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_small"
                        android:layout_marginRight="@dimen/padding_small"
                        android:text="@string/icon_collectmanager"
                        android:textColor="#ff5856d6"
                        android:textSize="@dimen/icon_normal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="我的收藏"
                        android:textColor="@color/colorText333"
                        android:textSize="@dimen/text_big" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/padding_noraml"
                        android:text="@{&quot;&quot;+unReadInfoManager.unReadInfo.UserFavoritesCount}"
                        android:textColor="@color/colorTextaaa"
                        android:textSize="@dimen/text_normal" />

                    <TextView
                        fontPath="iconfont/iconfont.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_noraml"
                        android:text="@string/icon_arrow_right"
                        android:textColor="@color/colorTextaaa"
                        android:textSize="@dimen/text_big" />

                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_productdetail"
                    android:background="@drawable/item_products_divider" />


                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/accountManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/padding_noraml"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_noraml"
                    app:OnClickListener="@{individualCenterViewModel.individualCenterFragment}">

                    <TextView
                        fontPath="iconfont/iconfont.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_small"
                        android:layout_marginRight="@dimen/padding_small"
                        android:text="@string/icon_accountmanager"
                        android:textColor="#ff4cd964"
                        android:textSize="@dimen/icon_normal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="账户安全"
                        android:textColor="@color/colorText333"
                        android:textSize="@dimen/text_big" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/padding_noraml" />

                    <TextView
                        fontPath="iconfont/iconfont.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_noraml"
                        android:text="@string/icon_arrow_right"
                        android:textColor="@color/colorTextaaa"
                        android:textSize="@dimen/text_big" />

                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_1px"
                    android:background="@color/colorGrayE8E8E8" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/content_height_normal" />
            </com.zhy.autolayout.AutoLinearLayout>
        </ScrollView>
    </com.zhy.autolayout.AutoLinearLayout>

</layout>