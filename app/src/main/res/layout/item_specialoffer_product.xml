<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_memberhome_lucky_bg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="450px"
            android:layout_marginBottom="@dimen/padding_noraml"
            android:layout_marginTop="@dimen/padding_noraml"
            app:layout_auto_basewidth="height" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_noraml"
            android:layout_marginRight="@dimen/padding_noraml"
            android:layout_marginTop="@dimen/padding_noraml"
            android:maxLines="2"
            android:text="撒了弄发牢骚的股份拉克丝多了高卡斯；力度开发了；时代法拉斯；"
            android:textColor="@color/colorText333"
            android:textSize="@dimen/text_biger" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/content_height_normal"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_noraml"
            android:paddingRight="@dimen/padding_noraml">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="5px"
                android:text="促销价："
                android:textColor="#ff6600"
                android:textSize="@dimen/text_big" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="9.9"
                android:textColor="#ff6600"
                android:textSize="36px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="5px"
                android:text="元/包"
                android:textColor="#ff6600"
                android:textSize="@dimen/text_big" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="40px"
                android:gravity="bottom"
                android:paddingBottom="5px"
                android:text="原价："
                android:textColor="@color/colorTextaaa"
                android:textSize="@dimen/text_big" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="5px"
                android:text="15.00"
                android:textColor="@color/colorTextaaa"
                android:textSize="@dimen/text_big" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="5px"
                android:text="元"
                android:textColor="@color/colorTextaaa"
                android:textSize="@dimen/text_big" />

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_1px"
            android:layout_marginTop="@dimen/padding_noraml"
            android:background="@color/colorGrayDEDEDE" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/content_height_big"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/padding_noraml"
            android:text="前往批发佬新安服务点抢购>>"
            android:textColor="#02a3fe"
            android:textSize="@dimen/text_big" />

    </com.zhy.autolayout.AutoLinearLayout>
</layout>