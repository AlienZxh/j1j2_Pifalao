<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".feature.search.SearchActivity">

    <data>

        <import type="android.view.View.OnClickListener" />

        <variable
            name="onClick"
            type="OnClickListener" />
    </data>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="match_parent"
        android:background="@color/colorLayoutBg"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                fontPath="iconfont/iconfont.ttf"
                android:layout_width="@dimen/actionbar_height"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/padding_actionbar_btn"
                android:text="@string/icon_back"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/icon_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/search_actionbar_title"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_actionbar_title" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/content_height_big"
            android:background="@drawable/item_store_head_bg"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoFrameLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/height_search_edit"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20px"
                android:layout_weight="1"
                android:background="@drawable/edit_conner_bg_selector">

                <TextView
                    fontPath="iconfont/iconfont.ttf"
                    android:layout_width="60px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/icon_search"
                    android:textColor="@color/colorText999"
                    android:textSize="@dimen/text_big" />

                <EditText
                    android:id="@+id/searchview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5px"
                    android:layout_marginLeft="60px"
                    android:layout_marginRight="10px"
                    android:layout_marginTop="5px"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorText333"
                    android:textSize="@dimen/text_big" />
            </com.zhy.autolayout.AutoFrameLayout>

            <TextView
                android:layout_width="150px"
                android:layout_height="@dimen/height_search_edit"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="@drawable/green_conner_btn_selector"
                android:gravity="center"
                android:text="搜索"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_big"
                app:OnClickListener="@{onClick}" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
</layout>