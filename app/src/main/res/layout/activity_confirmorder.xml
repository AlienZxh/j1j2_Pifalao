<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLayoutBg"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                fontPath="iconfont/iconfont.ttf"
                android:layout_width="@dimen/actionbar_height"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/icon_back"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/icon_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="确认订单"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_actionbar_title" />
        </com.zhy.autolayout.AutoRelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_productdetail"
            android:background="@drawable/item_products_divider" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:background="@drawable/confirmorder_adress_divder_bg" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorConfirmOrderAddress"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_noraml"
            android:paddingRight="@dimen/padding_noraml"
            android:paddingTop="28px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6px"
                android:background="@drawable/orange_conner_tag_bg"
                android:padding="3px"
                android:text="自提点"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星城国际小区服务点"
                android:textColor="@color/colorText333"
                android:textSize="30px"
                android:textStyle="bold" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorConfirmOrderAddress"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="6px"
            android:paddingLeft="@dimen/padding_noraml"
            android:paddingRight="@dimen/padding_noraml"
            android:paddingTop="6px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="营业时间"
                android:textColor="@color/colorText333"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星城国际小区服务点"
                android:textColor="@color/colorText333"
                android:textSize="@dimen/text_normal" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorConfirmOrderAddress"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="28px"
            android:paddingLeft="@dimen/padding_noraml"
            android:paddingRight="@dimen/padding_noraml"
            android:paddingTop="6px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自提地址"
                android:textColor="@color/colorText333"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星城国际小区服务点"
                android:textColor="@color/colorText333"
                android:textSize="@dimen/text_normal" />

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:background="@drawable/confirmorder_adress_divder_bg" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_productdetail"
            android:background="@drawable/item_products_divider" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_biger">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="84px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="16px"
                android:paddingTop="16px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="字体时间："
                    android:textColor="@color/colorText333"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="明天下午1点"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_normal"
                    android:textStyle="bold" />

                <TextView
                    fontPath="iconfont/iconfont.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_noraml"
                    android:layout_marginRight="@dimen/padding_noraml"
                    android:text="@string/icon_arrow_right"
                    android:textColor="@color/colorTextaaa"
                    android:textSize="@dimen/text_normal" />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1px"
                android:background="@color/colorGrayDEDEDE" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="84px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="16px"
                android:paddingTop="16px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付方式："
                    android:textColor="@color/colorText333"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="货到付款"
                    android:textColor="@color/colorText333"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    fontPath="iconfont/iconfont.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_noraml"
                    android:layout_marginRight="@dimen/padding_noraml"
                    android:text="@string/icon_arrow_right"
                    android:textColor="@color/colorTextaaa"
                    android:textSize="@dimen/text_normal" />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1px"
                android:background="@color/colorGrayDEDEDE" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="84px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="16px"
                android:paddingTop="16px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="　优惠券："
                    android:textColor="@color/colorText333"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="无"
                    android:textColor="@color/colorText333"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    fontPath="iconfont/iconfont.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_noraml"
                    android:layout_marginRight="@dimen/padding_noraml"
                    android:text="@string/icon_arrow_right"
                    android:textColor="@color/colorTextaaa"
                    android:textSize="@dimen/text_normal" />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1px"
                android:background="@color/colorGrayDEDEDE" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="132px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="16px"
                android:paddingTop="16px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="共４件商品"
                    android:textColor="@color/colorText333"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    fontPath="iconfont/iconfont.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_noraml"
                    android:layout_marginRight="@dimen/padding_noraml"
                    android:text="@string/icon_arrow_right"
                    android:textColor="@color/colorTextaaa"
                    android:textSize="@dimen/text_normal" />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1px"
                android:background="@color/colorGrayDEDEDE" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="84px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="16px"
                android:paddingTop="16px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="　用户留言："
                    android:textColor="@color/colorText333"
                    android:textSize="@dimen/text_normal" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:hint="选填，用户可填写要求内容"
                    android:textColor="@color/colorText333"
                    android:textColorHint="@color/colorTextaaa"
                    android:textSize="@dimen/text_normal" />

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_productdetail"
            android:background="@drawable/item_products_divider" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_biger">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="84px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="16px"
                android:paddingTop="16px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="　优惠券："
                    android:textColor="@color/colorText333"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="无"
                    android:textColor="@color/colorText333"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    fontPath="iconfont/iconfont.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_noraml"
                    android:layout_marginRight="@dimen/padding_noraml"
                    android:text="@string/icon_arrow_right"
                    android:textColor="@color/colorTextaaa"
                    android:textSize="@dimen/text_normal" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="84px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="16px"
                android:paddingTop="16px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="　优惠券："
                    android:textColor="@color/colorText333"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="无"
                    android:textColor="@color/colorText333"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    fontPath="iconfont/iconfont.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_noraml"
                    android:layout_marginRight="@dimen/padding_noraml"
                    android:text="@string/icon_arrow_right"
                    android:textColor="@color/colorTextaaa"
                    android:textSize="@dimen/text_normal" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="84px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="16px"
                android:paddingTop="16px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="　优惠券："
                    android:textColor="@color/colorText333"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="无"
                    android:textColor="@color/colorText333"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    fontPath="iconfont/iconfont.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_noraml"
                    android:layout_marginRight="@dimen/padding_noraml"
                    android:text="@string/icon_arrow_right"
                    android:textColor="@color/colorTextaaa"
                    android:textSize="@dimen/text_normal" />

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_bottombar"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_bar_bg"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:orientation="vertical"
                android:paddingRight="16px"
                android:paddingTop="4px">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="48px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品合计："
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_normal"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥0.0"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_biger"
                        android:textStyle="bold" />
                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="（节省：0.0）"
                    android:textColor="@color/colorTextaaa"
                    android:textSize="@dimen/text_normal" />
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/confirmOrder"
                android:layout_width="220px"
                android:layout_height="match_parent"
                android:background="@drawable/orange_btn_selector"
                android:gravity="center"
                android:text="提交订单"
                android:textColor="@color/colorWhite"
                android:textSize="30px" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</layout>