<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.net.Uri" />

        <variable
            name="array"
            type="int[]" />

    </data>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_small"
        android:paddingTop="@dimen/padding_small">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/content_height_normal"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            android:paddingLeft="@dimen/padding_noraml">

            <TextView
                fontPath="iconfont/iconfont.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4px"
                android:text="@string/icon_album"
                android:textColor="@color/colorText333"
                android:textSize="@dimen/text_biger" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="批发佬展示"
                android:textColor="@color/colorText333"
                android:textSize="@dimen/text_normal" />
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="@dimen/padding_small"
            android:background="@drawable/dash_divider"
            android:layerType="software" />


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16px"
            android:paddingTop="16px">

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:onClick="navigateToServicepointShow"
                android:orientation="vertical">

                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/padding_noraml"
                    app:displayImgAsBitmap="@{array[0]}"
                    app:siBorderColor="@color/colorGrayDEDEDE"
                    app:siBorderWidth="1px"
                    app:siRadius="5dp"
                    app:siSquare="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44px"
                    android:gravity="center"
                    android:text="批发佬服务点"
                    android:textColor="@color/colorTextaaa"
                    android:textSize="@dimen/text_normal" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:onClick="navigateToServicepointShow"
                android:orientation="vertical">

                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/padding_noraml"
                    app:displayImgAsBitmap="@{array[1]}"
                    app:siBorderColor="@color/colorGrayDEDEDE"
                    app:siBorderWidth="1px"
                    app:siRadius="5dp"
                    app:siSquare="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44px"
                    android:gravity="center"
                    android:text="批发佬服务点"
                    android:textColor="@color/colorTextaaa"
                    android:textSize="@dimen/text_normal" />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16px"
            android:paddingTop="16px">

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:onClick="navigateToStorShow"
                android:orientation="vertical">

                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/padding_noraml"
                    app:displayImgAsBitmap="@{array[2]}"
                    app:siBorderColor="@color/colorGrayDEDEDE"
                    app:siBorderWidth="1px"
                    app:siRadius="5dp"
                    app:siSquare="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44px"
                    android:gravity="center"
                    android:text="批发佬仓库"
                    android:textColor="@color/colorTextaaa"
                    android:textSize="@dimen/text_normal" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:onClick="navigateToStorShow"
                android:orientation="vertical">


                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/padding_noraml"
                    app:displayImgAsBitmap="@{array[3]}"
                    app:siBorderColor="@color/colorGrayDEDEDE"
                    app:siBorderWidth="1px"
                    app:siRadius="5dp"
                    app:siSquare="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44px"
                    android:gravity="center"
                    android:text="批发佬仓库"
                    android:textColor="@color/colorTextaaa"
                    android:textSize="@dimen/text_normal" />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</layout>