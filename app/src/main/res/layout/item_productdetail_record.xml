<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="productBuyRecord"
            type="com.j1j2.data.model.ProductBuyRecord" />
    </data>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38px"
        android:layout_marginRight="38px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="16px"
        android:paddingTop="16px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{productBuyRecord.PartialHideUserName}"
            android:textColor="@color/colorText333"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{&quot;&quot;+productBuyRecord.Quantity}"
            android:textColor="@color/colorText333"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{productBuyRecord.BoughtTimeStr}"
            android:textColor="@color/colorText333"
            android:textSize="@dimen/text_normal" />

    </com.zhy.autolayout.AutoLinearLayout>
</layout>